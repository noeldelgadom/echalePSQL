%p= link_to 'All Matches', matches_path
.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-header
        %h4
          Kickoff
          = @match.kickoff
      .panel-body
        .pull-right
          = link_to number_with_precision(@match.total_purse / @match.local_purse,
          precision: 2), edit_match_path, class: 'btn btn-warning'
        %h2= @match.local_team.name
        .pull-right
          = link_to number_with_precision(@match.total_purse / @match.tie_purse,
          precision: 2), edit_match_path, class: 'btn btn-warning'
        %h2 Empate
        .pull-right
          = link_to number_with_precision(@match.total_purse / @match.visitor_purse,
          precision: 2), edit_match_path, class: 'btn btn-warning'
        %h2= @match.visitor_team.name

      .panel-footer
        .row
          .col-md-6
            %h4
              Amount
          .col-md-6
            .pull-right
              %h4
                Total Purse
                = @match.total_purse
